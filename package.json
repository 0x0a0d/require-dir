{
  "name": "@cylution/require-dir",
  "version": "2.0.0-0",
  "description": "require dir",
  "main": "dist/index.js",
  "scripts": {
    "test": "npx jest",
    "prepack": "rm -rf dist; tsc",
    "pt": "npm publish --dry-run"
  },
  "keywords": [
    "require dir"
  ],
  "author": "0x0a0d",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cylution/eslint-config-nodejs": "^1.0.15",
    "@types/jest": "^27.4.1",
    "@types/node": "^14",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "jest": "^27.0.6",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cylution-org/require-dir"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigPath": "./tsconfig.json",
        "tsconfig": {
          "sourceMap": true
        }
      }
    },
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "rootDir": "."
  }
}
