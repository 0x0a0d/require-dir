{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
    "noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"pretty": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",
		"declaration": true,
		"outDir": "dist"
	},
	"exclude": [
		"dist",
		"test"
	],
	"include": [
		"src",
		"index.ts"
	]
}
